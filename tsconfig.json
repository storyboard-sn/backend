{
    "include": ["main.ts", "package.json", "src/**/*"],

    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "noEmitOnError": true,
        "composite": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },

    "exclude": [
        "node_modules",
        "dist"
    ]
}