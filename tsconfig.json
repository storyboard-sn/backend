{
    "include": ["main.ts", "server/**/*"],

    "ts-node": {
        "compiler": "ttypescript"
    },

    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "noEmitOnError": true,
        "composite": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./server/*"]
        },
        "plugins": [
            { "transform": "ts-transformer-keys/transformer" },
            { "transform": "typescript-rtti/dist/transformer" }
        ]
    },

    "exclude": [
        "node_modules",
        "dist"
    ]
}